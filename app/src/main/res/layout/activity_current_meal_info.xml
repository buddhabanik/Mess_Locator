<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_current_meal_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black01"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.buddha.mess_management.CurrentMealInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Month : "
        android:layout_alignParentTop="true"
        android:id="@+id/textView_currentMonth"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Money : "
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_below="@id/textView_currentMonth"
        android:id="@+id/textView_totalMoney"
        android:paddingLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Spent Money : "
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_below="@id/textView_totalMoney"
        android:id="@+id/textView_totalSpentMoney"
        android:paddingLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Meal : "
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_below="@id/textView_totalSpentMoney"
        android:id="@+id/textView_totalMeal"
        android:paddingLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Per Meal Cost : "
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_below="@id/textView_totalMeal"
        android:id="@+id/textView_PerMealCost"
        android:paddingLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mess Member Information : "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_below="@id/textView_PerMealCost"
        android:id="@+id/textView_memberInfo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_memberInfo"
        android:id="@+id/t1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Name"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/textView_hand"
                android:layout_column="0"
                android:layout_weight="1"
                android:textSize="15sp"
                android:background="@drawable/shape_design_05"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total Money"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/textView_player1"
                android:layout_column="0"
                android:layout_weight="1"
                android:textSize="15sp"
                android:background="@drawable/shape_design_05"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Total Meal"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/textView_player2"
                android:layout_column="1"
                android:layout_weight="1"
                android:textSize="15sp"
                android:background="@drawable/shape_design_05"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Total Cost"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/textView_player3"
                android:layout_column="2"
                android:layout_weight="1"
                android:textSize="15sp"
                android:background="@drawable/shape_design_05"
                android:textColor="@color/white"
                />

        </TableRow>

    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:layout_alignParentBottom="true"
        android:id="@+id/scrollView1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:stretchColumns="0,1,2,3"
            android:id="@+id/t2">


        </TableLayout>
    </ScrollView>

</RelativeLayout>
