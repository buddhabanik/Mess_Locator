<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_daily_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black01"
    tools:context="com.example.buddha.mess_management.DailyInfoActivity">

    <TextView
        android:text="Enter Meal Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:textColor="@color/lightblue"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Month : "
        android:textColor="@color/white"
        android:layout_below="@id/textView1"
        android:id="@+id/textView_currentMonth"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:text="DAY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:layout_below="@id/textView_currentMonth"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="@color/black"
        android:textAlignment="gravity"
        android:gravity="center"
        android:ems="2"
        android:id="@+id/editText_day"
        android:layout_alignBaseline="@id/textView"
        android:layout_marginLeft="50dp"
        android:background="@drawable/shape_design_09"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Cost Of Shopping"
        android:textColor="@color/black"
        android:textAlignment="gravity"
        android:gravity="center"
        android:ems="10"
        android:id="@+id/editText_CostOfShopping"
        android:layout_below="@id/textView"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_design_09"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/editText_CostOfShopping"
        android:layout_marginTop="10dp"
        android:id="@+id/linear1">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sipnner_memberName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/linear1"
        android:layout_marginTop="10dp"
        android:id="@+id/linear2">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_breakfastmeal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/linear2"
        android:layout_marginTop="10dp"
        android:id="@+id/linear3">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_lunchmeal" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/linear3"
        android:layout_marginTop="10dp"
        android:id="@+id/linear4">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_dinnermeal" />
    </LinearLayout>

    <Button
        android:text="Click to save "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_saveinfo"
        android:layout_below="@id/linear4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button01"
        android:ems="8"/>

</RelativeLayout>
